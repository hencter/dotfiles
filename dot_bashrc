#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# 别名
# 默认编辑器
export EDITOR='nvim'
export GPG_TTY=$(tty) # gpg 签名密码界面
alias ls='ls --color=auto'
alias cnvim="chezmoi edit"
alias update="chezmoi apply && source .bashrc"

# Starship 提示符
eval "$(starship init bash)"

# 启动 wayland 桌面前设置一些环境变量
function set_wayland_env
{
	# cd ${HOME}
	# 设置语言环境为中文
	
	export LANG=zh_CN.UTF-8
	export LANGUAGE=zh_CN:en_US

	# 解决QT程序缩放问题
	export QT_AUTO_SCREEN_SCALE_FACTOR=1

	# QT使用wayland和gtk
	export QT_QPA_PLATFORM="wayland;xcb"
	export QT_WAYLAND_DISABLE_WINDOWDECORATION=1
	export CLUTTER_BACKEND=wayland

	# 使用qt5ct软件配置QT程序外观
	export QT_QPA_PLATFORMTHEME="qt5ct;qt6ct"

	# 一些游戏使用wayland
	export SDL_VIDEODRIVER=wayland
	# 解决java程序启动黑屏错误
	export _JAVA_AWT_WM_NONEREPARENTING=1
	# GTK后端为 wayland和x11,优先wayland
	export GDK_BACKEND="wayland,x11"

	# Firefox
	export MOZ_ENABLE_WAYLAND=1

	# 配置 vulkan renderer
	export WLR_RENDERER="vulkan"
	# openglrenderer 
	# export WLR_RENDERER=gles2

}

# 命令行输入这个命令启动hyprland,可以自定义
function start_hyprland
{
	set_wayland_env

	export XDG_SESSION_TYPE=wayland
	export XDG_SESSION_DESKTOP=Hyprland
	export XDG_CURRENT_DESKTOP=Hyprland
	# Boot Hyprland
	exec Hyprland

}


function swww_randmoize {


# This script will randomly go through the files of a directory, setting it
# up as the wallpaper at regular intervals
#
# NOTE: this script is in bash (not posix shell), because the RANDOM variable
# we use is not defined in posix

if [[ $# -lt 1 ]] || [[ ! -d $1   ]]; then
	echo "Usage:
	$0 <dir containg images>"
	exit 1
fi

# Edit bellow to control the images transition
export SWWW_TRANSITION_FPS=60
export SWWW_TRANSITION_STEP=2

# This controls (in seconds) when to switch to the next image
INTERVAL=3

while true; do
	find "$1" \
		| while read -r img; do
			echo "$((RANDOM % 1000)):$img"
		done \
		| sort -n | cut -d':' -f2- \
		| while read -r img; do
			swww img "$img"
			# sleep $INTERVAL
		done
done

}


function reload_waybar {
	killall waybar
	waybar > .config/waybar/boot.log >&1 &
}
